<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.ukonnect.ClubPageActivity">

    <TextView
        android:id="@+id/club_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Skule Badminton Club"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="35sp"
        android:fontFamily="sans-serif-light"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:gravity="center"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#4DB6AC"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:paddingTop="10dp"/>

        <TextView
            android:id="@+id/club_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Club is swag. Club is swag. Club is swag. Club is swag. Club is swag. Club is swag. Club is swag. Club is swag. Club is swag. Club is swag. Club is swag. Club is swag. Club is swag. Club is swag. Club is swag. Club is swag. Club is swag. Club is swag. Club is swag. Club is swag."
            android:padding="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#80CBC4"
        android:padding="16dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upcoming Events"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#E0F2F1"
            android:text="Facebook Link"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#B2DFDB"
            android:text="Contact Email"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80CBC4"
        android:text="Club Discussion Page"
        android:layout_weight="1"/>

</LinearLayout>
