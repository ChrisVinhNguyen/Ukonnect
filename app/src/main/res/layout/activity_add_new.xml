<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.android.ukonnect.AddNewActivity">

    <SearchView
        android:id="@+id/Club_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false"
        android:queryHint="Club Name"/>
    <TextView
        android:id="@+id/eventNotifications_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:textColor="#000000"
        android:textStyle="bold"
        android:paddingBottom="10dp"
        android:textSize="30dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:paddingTop="10dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Catagory_List"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/Catagory_List_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0F2F5"
                android:text="All Areas"
                android:paddingLeft="5dp"
                android:layout_margin="10dp"
                android:textSize="13sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0F2F5"
                android:text="Academic"
                android:paddingLeft="5dp"
                android:layout_margin="10dp"
                android:textSize="13sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0F2F5"
                android:text="Arts"
                android:paddingLeft="5dp"
                android:layout_margin="10dp"
                android:textSize="13sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0F2F5"
                android:text="Athletics and Recreation"
                android:paddingLeft="5dp"
                android:layout_margin="10dp"
                android:textSize="13sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0F2F5"
                android:text="Community Service"
                android:paddingLeft="5dp"
                android:layout_margin="10dp"
                android:textSize="13sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0F2F5"
                android:text="Culture and Identities"
                android:paddingLeft="5dp"
                android:layout_margin="10dp"
                android:textSize="13sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0F2F5"
                android:text="Environment and Sustainability"
                android:paddingLeft="5dp"
                android:layout_margin="10dp"
                android:textSize="13sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0F2F5"
                android:text="Hobby and Leisure"
                android:paddingLeft="5dp"
                android:layout_margin="10dp"
                android:textSize="13sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0F2F5"
                android:text="Global Interests"
                android:paddingLeft="5dp"
                android:layout_margin="10dp"
                android:textSize="13sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0F2F5"
                android:text="Leadership"
                android:paddingLeft="5dp"
                android:layout_margin="10dp"
                android:textSize="13sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0F2F5"
                android:text="Media"
                android:paddingLeft="5dp"
                android:layout_margin="10dp"
                android:textSize="13sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0F2F5"
                android:text="Polotics"
                android:paddingLeft="5dp"
                android:layout_margin="10dp"
                android:textSize="13sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0F2F5"
                android:text="Sotial Justice/Advocacy"
                android:paddingLeft="5dp"
                android:layout_margin="10dp"
                android:textSize="13sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0F2F5"
                android:text="Sotial"
                android:paddingLeft="5dp"
                android:layout_margin="10dp"
                android:textSize="13sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0F2F5"
                android:text="Spirituality and Faith Communities"
                android:paddingLeft="5dp"
                android:layout_margin="10dp"
                android:textSize="13sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0F2F5"
                android:text="Student Govornments and Councils"
                android:paddingLeft="5dp"
                android:layout_margin="10dp"
                android:textSize="13sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0F2F5"
                android:text="Work and Career development"
                android:paddingLeft="5dp"
                android:layout_margin="10dp"
                android:textSize="13sp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
